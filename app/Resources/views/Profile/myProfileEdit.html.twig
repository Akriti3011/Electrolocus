<div class="myProfile">
    <div class="container">

        <div class="logo">
            <h4><b>Account</b>
                <span class="green"><br>{% if customerDetail is defined and customerDetail is not empty %}
              {{customerDetail.firstName}}{% else %}{{ app.session.get('email') }}{%endif%}</span></h4>
            <hr>
        </div>



            <form class="form-horizontal login-form" action="{% if customerDetail is defined and customerDetail is not empty %}
                                          {{ path('updateProfile',{'customer_id':app.session.get('customer_id')}) }} {% else %}
                                           {{ path('addProfile',{'customer_id':app.session.get('customer_id')}) }} {% endif %}"
                  method="post">
                <div class="row" style="margin: 15px;">
                <div class="profile-card col-sm-12">
                    <div class="profile-header">
                        <h3 style="color: #02b3e4">Primary Information</h3>
                        <hr>

                    </div>
                    <div class="profile-body">

                        <div class="form-group col-sm-6">
                            <div class="col-sm-4">
                                <h4>First Name</h4>
                            </div>
                            <div class="col-sm-8">
                                <input name="firstName" class="form-control" type="text"
                                       value="{% if customerDetail is defined and customerDetail is not empty %}{{customerDetail.firstName}}{%endif%}" required />
                            </div>
                        </div>
                        <div class="form-group col-sm-6">
                            <div class="col-sm-4">
                                <h4>Last Name</h4>
                            </div>
                            <div class="col-sm-8">
                                <input name="lastName" class="form-control" type="text"
                                       value="{% if customerDetail is defined and customerDetail is not empty %}{{customerDetail.lastName}}{%endif%}" required />
                            </div>
                        </div>
                        <div class="form-group col-sm-6">
                            <div class="col-sm-4">
                                <h4>Gender</h4>
                            </div>


                                <div class="col-sm-8">
                                    <select name="gender" class="form-control" value="{% if customerDetail is defined and customerDetail is not empty %}{{customerDetail.gender}}{%endif%}" >
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Don't specify">Don't specify</option>


                                    </select>
                                </div>


                        </div>
                        <div class="form-group col-sm-6">
                            <div class="col-sm-4">
                                <h4>Contact</h4>
                            </div>
                            <div class="col-sm-8">
                                <input name="contact" class="form-control" type="tel"
                                       value="{% if customerDetail is defined and customerDetail is not empty %}{{customerDetail.contactNo}}{%endif%}" required />
                            </div>
                        </div>
                        <div class="form-group col-sm-6">
                            <div class="col-sm-4">
                                <h4>Address</h4>
                            </div>
                            <div class="col-sm-8">
                                <input name="address" class="form-control" type="text"
                                       value="{% if customerDetail is defined and customerDetail is not empty %}{{customerDetail.address}}{%endif%}" required />
                            </div>
                        </div>
                        <div class="form-group col-sm-6">
                            <div class="col-sm-4">
                                <h4>E-mail id</h4>
                            </div>
                            <div class="col-sm-8">
                                <input name="email" class="form-control" type="email"
                                       value="{{app.session.get('email')}}" required />
                            </div>
                        </div>

                    </div>
                </div>
                <div class="profile-card col-sm-12">
                    <div class="profile-header">
                        <h3 style="color:#15c26b">Secondary Information</h3>
                        <hr>
                    </div>
                    <div class="profile-body">

                        <div class="form-group col-sm-6">
                            <div class="col-sm-4">
                                <h4>Source</h4>
                            </div>
                            <div class="col-sm-8">
                                <input name="source" class="form-control" type="text"
                                       value="{% if customerDetail is defined and customerDetail is not empty %}{{customerDetail.source}}{%endif%}" required />
                            </div>
                        </div>
                        <div class="form-group col-sm-6">
                            <div class="col-sm-4">
                                <h4>Purpose</h4>
                            </div>
                            <div class="col-sm-8">
                                <select name="purpose" class="form-control">
                                        <option value="Domestic">Domestic</option>
                                        <option value="Commercial">Commercial</option>
                                        <option value="Industrial">Industrial</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group col-sm-6">
                            <div class="col-sm-4">
                                <h4>Load</h4>
                            </div>
                            <div class="col-sm-8">
                                <input name="load" class="form-control" type="number"
                                       value="{% if customerDetail is defined and customerDetail is not empty %}{{customerDetail.electricityLoad}}{%endif%}" required />
                            </div>
                        </div>
                        <div class="form-group col-sm-6">
                            <div class="col-sm-4">
                                <h4>Area Code</h4>
                            </div>
                            <div class="col-sm-8">
                                <input name="areaCode" class="form-control" type="text"
                                       value="{% if customerDetail is defined and customerDetail is not empty %}{{customerDetail.areaCode}}{%endif%}" required />
                            </div>
                        </div>
                        <div class="form-group col-sm-6">
                            <div class="col-sm-4">
                                <h4>Meter id</h4>
                            </div>
                            <div class="col-sm-8">
                                <input name="meterId" class="form-control" type="text"
                                       value="{% if customerDetail is defined and customerDetail is not empty %}{{customerDetail.meterId}}{%endif%}" required />
                            </div>
                        </div>
                        <div class="form-group col-sm-6">
                            <div class="col-sm-4">
                                <h4>Connection</h4>
                            </div>
                            <div class="col-sm-8">
                                <select name="connectionType" class="form-control">
                                    <option value="Permanent">Permanent</option>
                                    <option value="Temporary">Temporary</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
                        <input name="submit" type="submit" value="{% if customerDetail is defined and customerDetail is not empty %}Update
                                                      {% else %}Save{% endif %}" class="edit btn btn-success btn-lg btn-block" style="text-align: center;">


