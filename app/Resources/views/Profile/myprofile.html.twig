<div class="myProfile">
    <div class="container">
        {% if customerDetail is defined and customerDetail is not empty %}


            <div class="logo">
                <h4><b>Account</b>
                    <span class="green"><br>{{ customerDetail.firstName }}</span> </h4><hr>
            </div>

        <div class="row" style="margin-bottom: 15px">

            <div class = "col-md-6 col-sm-12">
                <div class="profile-card">
                    <div class="profile-header">
                        <h3 style="color: #02b3e4">Primary Information</h3>
                            <hr>

                    </div>

                    <div class="profile-body">

                        <table>
                           <tr>
                               <td class="title">First Name</td>
                               <td>{{ customerDetail.firstName }}</td>
                           </tr>
                            <tr>
                                <td class="title">Last Name</td>
                                <td> {{ customerDetail.lastName}} </td>
                            </tr>
                            <tr>
                                <td class="title">Gender</td>
                                <td> {{ customerDetail.gender}} </td>
                            </tr>
                            <tr>
                                <td class="title">Contact No</td>
                                <td>{{customerDetail.contactNo }}  </td>
                            </tr>
                            <tr>
                                <td class="title">Address</td>
                                <td> {{ customerDetail.address}} </td>
                            </tr>
                            <tr>
                                <td class="title">E-mail id</td>
                                <td>{{app.session.get('email')}} </td>
                            </tr>

                        </table>
                    </div>
                </div>
            </div>
            <div class = "col-md-6 col-sm-12">
                <div class="profile-card">
                    <div class="profile-header">
                        <h3 style="color:#15c26b">Secondary Information</h3>
                        <hr>
                    </div>
                    <div class="profile-body">
                        <table>
                            <tr>
                                <td class="title">Source</td>
                                <td> {{ customerDetail.source }}</td>
                            </tr>
                            <tr>
                                <td class="title">Purpose</td>
                                <td> {{ customerDetail.purpose}} </td>
                            </tr>
                            <tr>
                                <td class="title">Electricity Load</td>
                                <td> {{ customerDetail.electricityLoad}} kWh</td>
                            </tr>
                            <tr>
                                <td class="title">Area Code</td>
                                <td> {{ customerDetail.areaCode }} </td>
                            </tr>
                            <tr>
                                <td class="title">Meter Id</td>
                                <td> {{customerDetail.meterId}} </td>
                            </tr>
                            <tr>
                                <td class="title">Connection Type</td>
                                <td> {{ customerDetail.connectionType}} </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <a href="{{path('updateProfile',{'customer_id':app.session.get('customer_id')})}}"><input name="submit" type="submit" value="Edit" class="edit btn btn-success btn-lg btn-block"></a>
            {% else %}
                <div class="logo">
                    <h4><b>Account</b>
                        <span class="green"><br>{{ app.session.get('email') }}</span> </h4><hr>
                    No details found!!
                </div>
                <a href="{{path('addProfile',{'customer_id':app.session.get('customer_id')})}}"><input name="submit" type="submit" value="Edit" class="edit btn btn-success btn-lg btn-block"></a>

        {% endif %}
